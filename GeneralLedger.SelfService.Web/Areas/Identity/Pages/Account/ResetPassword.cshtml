@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Recuperar contraseña";
    ViewData["AppClass"] = "app-full-height app-without-header app-full-width";
    ViewData["AppWithoutHeader"] = true;
    ViewData["AppWithoutSidebar"] = true;
    ViewData["AppWithoutFotter"] = true;
    ViewData["AppWithoutContainer"] = true;
}

<div class="login" style="background-image:url('/img/MultiMosaico.png');background-size:cover;background-position:inherit;background-repeat: no-repeat">
    <div class="login-content">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" style="text-align:center;padding-top:5px;padding-bottom:5px">
                        <img src="~/img/MultiLogo.png" alt="" class="card-img-top" width="200" height="83" />
                    </div>
                    <div class="card-body">
                        <h3 style="text-align:center">Recuperar Contraseña</h3>
                        <section>
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input asp-for="Input.Code" type="hidden" />
                                <div class="form-group">
                                    <label asp-for="Input.Email"></label>
                                    <input asp-for="Input.Email" class="form-control" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Password"></label>
                                    <input asp-for="Input.Password" class="form-control" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.ConfirmPassword"></label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary">Recuperar</button>
                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="footer" class="app-footer" style="margin:0px; position: fixed;padding-top: 5px;padding-bottom: 5px">
    <table width="100%">
        <tr>
            <td width="50%">Copyright &copy; @DateTime.Now.Year General Ledger & CIA S.A.S. Todos los derechos reservados.</td>
            <td width="50%" style="text-align:right"><a href="https://www.glerp.net.co" target="_blank"><img style="float: right;" src="~/img/LogoGL.png" alt="General Legder" height="40" width="120"></a></td>
        </tr>
    </table>
</div>

