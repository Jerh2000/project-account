@{
    ViewData["Title"] = "Home Page";
}


<div class="row"> 
    <!--ASIGNADOS-->
    <div class="col-6 col-md-2">
        <div class="card border-0 m-2">
            <div class="card-body m-1 p-1">
                <div class="row m-0 p-0">
                    <a asp-action="List" asp-controller="Home" asp-route-state="all" class="text-black" style="text-decoration: none;">
                        <div class="col-md-12 m-0"> 
                            <h4 id="pqrsfasignado" class="text-center">0</h4>
                        </div>
                        <hr>
                        <div class="col-md-12 d-flex justify-content-center align-items-center m-0">
                            <i class="fas fa-cogs fa-lg text-primary"></i>
                            <span class="badge fw-bold text-dark" style="font-size:1rem">ASIGNADAS</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

     <!--ABIERTOS-->
    <div class="col-6 col-md-2">
        <div class="card border-0 m-2">
            <div class="card-body m-1 p-1">
                <div class="row m-0 p-0">
                    <a asp-action="List" asp-controller="Home" asp-route-state="Abierta" class="text-black" style="text-decoration: none;">
                        <div class="col-md-12 m-0"> 
                            <h4 id="pqrsfabierto" class="text-center">0</h4>
                        </div>
                        <hr>
                        <div class="col-md-12 d-flex justify-content-center align-items-center m-0">
                            <i class="fas fa-cogs fa-lg text-success"></i>
                            <span class="badge fw-bold text-dark" style="font-size:1rem">ABIERTAS</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

     <!--EN GESTIÓN-->
    <div class="col-6 col-md-2">
        <div class="card border-0 m-2">
            <div class="card-body m-1 p-1">
                <div class="row m-0 p-0">
                    <a asp-action="List" asp-controller="Home" asp-route-state="En Gestión" class="text-black" style="text-decoration: none;">
                        <div class="col-md-12 m-0"> 
                            <h4 id="pqrsfgestion" class="text-center">0</h4>
                        </div>
                        <hr>
                        <div class="col-md-12 d-flex justify-content-center align-items-center m-0">
                            <i class="fas fa-cogs fa-lg text-warning"></i>
                            <span class="badge fw-bold text-dark" style="font-size:1rem">EN GESTIÓN</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

     <!--PENDIENTES-->
    <div class="col-6 col-md-2">
        <div class="card border-0 m-2">
            <div class="card-body m-1 p-1">
                <div class="row m-0 p-0">
                    <a asp-action="List" asp-controller="Home" asp-route-state="Pendiente" class="text-black" style="text-decoration: none;">
                        <div class="col-md-12 m-0"> 
                            <h4 id="pqrsfpendiente" class="text-center">0</h4>
                        </div>
                        <hr>
                        <div class="col-md-12 d-flex justify-content-center align-items-center m-0">
                            <i class="fas fa-cogs fa-lg text-danger"></i>
                            <span class="badge fw-bold text-dark" style="font-size:1rem">PENDIENTES</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!--VENCE HOY-->
    <div class="col-6 col-md-2">
        <div class="card border-0 m-2">
            <div class="card-body m-1 p-1">
                <div class="row m-0 p-0">
                    <a asp-action="List" asp-controller="Home" asp-route-state="VenceHoy" class="text-black" style="text-decoration: none;">
                        <div class="col-md-12 m-0">
                            <h4 id="pqrsfvence" class="text-center">0</h4>
                        </div>
                        <hr>
                        <div class="col-md-12 d-flex justify-content-center align-items-center m-0">
                            <i class="fas fa-cogs fa-lg text-info"></i>
                            <span class="badge fw-bold text-dark" style="font-size:1rem">VENCE HOY</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

     <!--CERRADOS-->
    <div class="col-6 col-md-2">
        <div class="card border-0 m-2">
            <div class="card-body m-1 p-1">
                <div class="row m-0 p-0">
                    <a asp-action="List" asp-controller="Home" asp-route-state="Cerrada" class="text-black" style="text-decoration: none;">
                        <div class="col-md-12 m-0"> 
                            <h4 id="pqrsfcerrado" class="text-center">0</h4>
                        </div>
                        <hr>
                        <div class="col-md-12 d-flex justify-content-center align-items-center m-0">
                            <i class="fas fa-cogs fa-lg text-dark"></i>
                            <span class="badge fw-bold text-dark" style="font-size:1rem">CERRADAS</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-2">
    <div class="col-md-8">
        <div class="card border-0">
            <div class="card-body">
                <div id="apexAreaChart">

                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0">
            <div class="card-body">
                <div class="d-flex mb-3">
                    <div class="flex-grow-1">
                        <h5 class="mb-1">
                            <span class="fas fa-headset"></span>
                            Seguimiento de mis PQRSF
                        </h5>
                    </div>                      
                </div>
                <div class="mb-4">
                    <h3 id="lbltotal" class="mb-1">
                        Total: 0
                    </h3>
                </div>
                <div class="progress mb-4" style="height: 10px;">
                    <div id="porpeticion" class="progress-bar" style="width: @("0"+"%")"></div>
                    <div id="porqueja" class="progress-bar bg-teal" style="width: @("0"+"%")"></div>
                    <div id="porreclamo" class="progress-bar bg-yellow" style="width:@("0"+"%")"></div>
                    <div id="porsugerencia" class="progress-bar bg-pink" style="width: @("0"+"%")"></div>
                    <div id="porfelicitacion" class="progress-bar bg-indigo" style="width: @("0"+"%")"></div>
                </div>
                <div class="fs-13px">
                    <div class="d-flex align-items-center mb-2">
                        <div class="flex-grow-1 d-flex align-items-center">
                            <i class="fa fa-circle fs-9px fa-fw text-primary me-2"></i><p style="margin:0;padding:0;" id="lblcanpeticion">Peticiones ( 0)</p>
                        </div>
                        <div id="lblporpeticion" class="font-weight-600 text-dark">(@("0" + "%"))</div>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <div class="flex-grow-1 d-flex align-items-center">
                            <i class="fa fa-circle fs-9px fa-fw text-teal me-2"></i><p style="margin:0;padding:0;" id="lblcanqueja">Quejas ( 0)</p>
                        </div>
                        <div id="lblporqueja" class="font-weight-600 text-dark">(@("0" + "%"))</div>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <div class="flex-grow-1 d-flex align-items-center">
                            <i class="fa fa-circle fs-9px fa-fw text-warning me-2"></i><p style="margin:0;padding:0;" id="lblcanreclamo">Reclamos ( 0)</p>
                        </div>
                        <div id="lblporreclamo" class="font-weight-600 text-dark">(@("0" + "%"))</div>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <div class="flex-grow-1 d-flex align-items-center">
                            <i class="fa fa-circle fs-9px fa-fw text-danger me-2"></i><p style="margin:0;padding:0;" id="lblcansugerencia">Sugerencias ( 0)</p>
                        </div>
                        <div id="lblporsugerencia" class="font-weight-600 text-dark">(@("0" + "%"))</div>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <div class="flex-grow-1 d-flex align-items-center">
                            <i class="fa fa-circle fs-9px fa-fw text-indigo me-2"></i><p style="margin:0;padding:0;" id="lblcanfelicitacion">Felicitaciones ( 0)</p>
                        </div>
                        <div id="lblporfelicitacion" class="font-weight-600 text-dark">(@("0" + "%"))</div>
                    </div>
                    <div class="fs-12px text-end">
                        <a href="/PQRSF/List"><span class="fs-12px">Ver más...</span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
      
</div>

<div class="row mt-2">
    <div class="col-md-8">
        <div class="card border-0">
            <div class="card-body">
                <div id="apexAreaChartVs">
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0">
            <table class="table table-borderless" id="table-actividades">
                <thead>
                    <tr>
                        <th>Tareas pendientes</th>
                        <th><button id="open-modal-detalles" class="btn btn-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#modal-activity-detail"><i class="fa fa-fw fa-eye"></i></button></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row mt-2">
    <div class="col-md-4">
        <div class="card border-0">
            <div class="card-body">
                <div id="apexPieChart">

                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="card border-0">
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="" class="form-label">MES</label>
                            <select name="mesperiodo" id="mesperiodo" class="form-select form-select-sm" data-index="5">
                                <option value="1">ENERO</option>
                                <option value="2">FEBRERO</option>
                                <option value="3">MARZO</option>
                                <option value="4">ABRIL</option>
                                <option value="5">MAYO</option>
                                <option value="6">JUNIO</option>
                                <option value="7">JULIO</option>
                                <option value="8">AGOSTO</option>
                                <option value="9">SEPTIEMBRE</option>
                                <option value="10">OCTUBRE</option>
                                <option value="11">NOVIEMBRE</option>
                                <option value="12">DICIEMBRE</option>                               
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="" class="form-label">AÑO</label>
                            <select name="anioperiodo" id="anioperiodo" class="form-select form-select-sm" data-index="5">
                                @for (int i = 1900; i <= DateTime.Now.Year; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-primary w-100 mt-3" id="btn-consultar"><i class="fas fa-search"></i> Consultar</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="">
                            <div class="me-auto">
                                <h5 class="text-dark text-opacity-80 mb-3">ASIGNADAS</h5>
                                <h3 class="text-dark mt-n1 mb-1" id="assigned">0</h3>
                                <p class="mb-1 text-dark text-opacity-60 text-truncate" id="assignedUpDown">
                                   
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="">
                            <div class="me-auto">
                                <h5 class="text-dark text-opacity-80 mb-3">PROMEDIO x DÍA</h5>
                                <h3 class="text-dark mt-n1 mb-1" id="assignedProm">0</h3>
                                <p class="mb-1 text-dark text-opacity-60 text-truncate" id="assignedPromUpDown">
                                    @*<i class="fa fa-caret-up"></i> <b id="assignedPromUpDown">0%</b> increase compare to last week*@
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div id="apexChartAssigned">
                            
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-4">
                        <div class="">
                            <div class="me-auto">
                                <h5 class="text-dark text-opacity-80 mb-3">RESUELTAS</h5>
                                <h3 class="text-dark mt-n1 mb-1" id="resolved">0</h3>
                                <p class="mb-1 text-dark text-opacity-60 text-truncate" id="resolvedUpDown">
                                    @*<i class="fa fa-caret-up"></i> <b id="resolvedUpDown">0%</b> increase compare to last week*@
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="">
                            <div class="me-auto">
                                <h5 class="text-dark text-opacity-80 mb-3">PROMEDIO x DÍA</h5>
                                <h3 class="text-dark mt-n1 mb-1" id="resolvedProm">0</h3>
                                <p class="mb-1 text-dark text-opacity-60 text-truncate" id="resolvedPromUpDown">
                                    @*<i class="fa fa-caret-up"></i> <b id="resolvedPromUpDown">0%</b> increase compare to last week*@
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div id="apexChartResolved">
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>

<!--***************************************MODAL DETALLES ACTIVIDADES*************************************************************************-->
<div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" id="modal-activity-detail">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">ACTIVIDADES PENDIENTES</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <table id="table-activity-details" class="table table-borderless table-lg w-100">
                            <thead>
                                <tr>
                                    <th width="30%" style="min-width: 30%;">ACTIVIDAD</th>
                                    <th width="20%" style="min-width: 20%;">FECHA CUMPLIMIENTO</th>
                                    <th width="40%" style="min-width: 40%;">OBSERVACIÓN</th>
                                    <th width="10%" style="min-width: 10%;"></th>
                                </tr>
                            </thead>
                            <tbody>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts
{
    <script src="~/scripts/Home/index.js" type="text/javascript"></script>
   
}