<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="utf-8" />
        <title>General Ledger | @ViewData["Title"]</title>
		<meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="shortcut icon" href="~/icon/logoGL.png" />

        @RenderSection("MetaTag", required: false)

        <!-- ================== BEGIN core-css ================== -->
        <link href="~/css/vendor.min.css" rel="stylesheet" />
        <link href="~/css/app.min.css" rel="stylesheet" />
        <link href="~/css/glstyles.css" rel="stylesheet" />
        <link href="~/lib/fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet" />
        <link href="~/lib/tag-it/css/jquery.tagit.css" rel="stylesheet" />
        <link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />
        <link href="~/lib/select-picker/dist/picker.min.css" rel="stylesheet" />
        <link href="~/lib/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet" />
        <link href="~/lib/summernote/dist/summernote-lite.css" rel="stylesheet" />
        <link href="~/lib//select2/dist/css/select2.min.css"/>
        <link href="~/lib/select2-bootstrap4-theme//dist/select2-bootstrap4.min.css"/>
        <link href="~/lib/bootstrap-select/dist/css/bootstrap-select.min.css"/>
        <!-- ================== END core-css ================== -->

        <!--====================================DATATABLES===============================-->
        <link href="~/lib/datatables.net-bs5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
        <link href="~/lib/datatables.net-responsive-bs5/css/responsive.bootstrap5.min.css" rel="stylesheet" />
        <link href="~/lib/datatables.net-buttons-bs5/css/buttons.bootstrap5.min.css" rel="stylesheet" />
        <link href="~/lib/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet" />

        @RenderSection("Styles", required: false)
    </head>

    <body>
        <div id="loading-screen" style="display:none">
            <div class="row d-flex justify-content-center" style="margin-top:300px">
                <div class="spinner-border text-primary"></div>
                <h5 class="mx-2 text-white">Por favor espere...</h5>
            </div>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div id="app" class="app">
                <!--HEADER-->
                <partial name="_Header" />

                <!--SIDEBAR-->
                <partial name="_Sidebar" /> 

                <!--CONTENT-->
                <div id="content" class="app-content">
                    @RenderBody()
                    <a href="#" data-click="scroll-top" class="btn-scroll-top fade"><i class="fa fa-arrow-up"></i> </a>
                </div>

                <partial name="_Footer" />  
                @RenderSection("OutterAppContainerContent", required: false)

                <!--<partial name="_ThemePanel" />--> 

            </div>
        }
        else
        {
            @RenderBody()
        }
        

        <!-- ================== BEGIN core-js ================== -->
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/vendor.min.js"></script>
        <script src="~/js/app.min.js"></script>
        <script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/datatables.net-bs5/js/dataTables.bootstrap5.min.js"></script>
        <script src="~/lib/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
        <script src="~/lib/datatables.net-buttons/js/buttons.colVis.min.js"></script>
        <script src="~/lib/datatables.net-buttons/js/buttons.flash.min.js"></script>
        <script src="~/lib/datatables.net-buttons/js/buttons.html5.min.js"></script>
        <script src="~/lib/datatables.net-buttons/js/buttons.print.min.js"></script>
        <script src="~/lib/datatables.net-buttons-bs5/js/buttons.bootstrap5.min.js"></script>
        <script src="~/lib/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
        <script src="~/lib/datatables.net-responsive-bs5/js/responsive.bootstrap5.min.js"></script>
        <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
        <script src="~/lib/select2/dist/js/select2.min.js"></script>
        <script src="~/lib/jquery-migrate/dist/jquery-migrate.min.js"></script>
        <script src="~/lib/tag-it/js/tag-it.min.js"></script>
        <script src="~/lib/select-picker/dist/picker.min.js"></script>
        <script src="~/lib/sweetalert2/dist/sweetalert2.min.js"></script>
        <script src="~/lib/summernote/dist/summernote-lite.min.js"></script>
        <script src="~/lib/summernote/lang/summernote-es-ES.js"></script>
        <script src="~/js/Utilities.js"></script>
        <script src="~/js/jquery.blockUI.js"></script>
        <!-- ================== END core-js ================== -->
        <script src="~/lib/apexcharts/dist/apexcharts.min.js"></script>
        <script src="~/lib/moment/min/moment.min.js"></script>
        <script src="~/lib/bootstrap-daterangepicker/daterangepicker.js"></script>
        <script src="~/lib/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
        <script src="~/lib/bootstrap-select/dist/js/i18n/defaults-es_ES.min.js"></script>
        @RenderSection("scripts", required: false)
    </body>

</html>